          <a .link.silver href="@{UserSharedR unamep SharedPublic}">public
          ‧  
          <a .link.silver href="@{UserFilterR unamep FilterUnread}">unread
          ‧  
          <a .link.silver href="@{UserFilterR unamep FilterUntagged}">untagged
          ‧  
          <a .link.silver href="@{UserFilterR unamep FilterStarred}">starred
      <div .cf>
    
    ^{pager}

    <div .cf>

    <div ##{renderEl} .mt3>

    <div .cf>

