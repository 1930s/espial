  <div .w-100.mw8.center>
    <div .mb2>
      <div .fl.pr3.dib.mb2>
        <b>
          <a .link href="@{UserR unamep}">#{uname}
          $forall tag <- pathtags
            \  + #
            <a .link href="@{UserTagsR unamep (TagsP [tag])}">#{tag}
      <div .fl.pr3.dib.mb2>
        <span .f7.silver>#{bcount}</span>
      $if isowner
        <div .filters.dib.mb2>
          <a .link.silver href="@{UserR unamep}">all
