      ^{pager}

      $if (fromIntegral bcount >= limit) || (page > 1)
        $maybe route <- mroute
          <div .dib.ml5>
            <span .silver.mr1>per page:
            <a .link.light-silver :limit == 20:.nav-active href="@?{(route, [("count", "20")])}"‧>20</a> ‧ 
